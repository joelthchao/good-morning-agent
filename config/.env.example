# Good Morning Agent 環境配置範例

# ===== 電子報收集配置 =====
# 專用收集信箱（重新訂閱所有電子報到這個信箱）
NEWSLETTER_EMAIL=good-morning-newsletters@gmail.com
NEWSLETTER_APP_PASSWORD=your_16_digit_gmail_app_password

# ===== 郵件發送配置 =====  
# 用於發送每日摘要的信箱
SENDER_EMAIL=your_personal_email@gmail.com
SENDER_APP_PASSWORD=your_sender_gmail_app_password

# 接收摘要的信箱
RECIPIENT_EMAIL=your_email@gmail.com

# ===== AI 服務配置 =====
# OpenAI API（用於生成深度摘要）
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo  # 或 gpt-4（成本較高但品質更好）

# ===== 外部 API 配置 =====
# 天氣服務（建議使用 OpenWeatherMap 免費版）
WEATHER_API_KEY=your_weather_api_key
WEATHER_CITY=Taipei  # 或你的城市

# 新聞服務（可選，部分電子報已包含新聞）
NEWS_API_KEY=your_news_api_key

# ===== 系統配置 =====
# 執行時間設定
DAILY_RUN_TIME=07:00
TIMEZONE=Asia/Taipei

# 資料庫配置（本地使用 SQLite）
DATABASE_URL=sqlite:///data/good_morning.db

# 日誌等級
LOG_LEVEL=INFO

# ===== 進階配置 =====
# AI 使用限制（每日 token 上限，避免費用失控）
DAILY_TOKEN_LIMIT=10000

# 郵件發送間隔（秒，避免被標記為垃圾郵件）
EMAIL_SEND_INTERVAL=2

# 摘要長度控制
SUMMARY_MAX_LENGTH=200
KEY_POINTS_COUNT=3