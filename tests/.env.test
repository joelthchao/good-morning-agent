# Test Environment Variables
# These are used only during testing and should contain mock/test values

# Testing flags
TESTING=true
LOG_LEVEL=DEBUG
SKIP_INTEGRATION_TESTS=false

# Mock Email Configuration (for unit tests)
TEST_IMAP_SERVER=imap.gmail.com
TEST_IMAP_PORT=993
TEST_SMTP_SERVER=smtp.gmail.com
TEST_SMTP_PORT=587
TEST_COLLECTION_EMAIL=test.collector@gmail.com
TEST_SENDER_EMAIL=test.sender@gmail.com
TEST_EMAIL_PASSWORD=mock_app_password

# Mock OpenAI Configuration (for unit tests)
TEST_OPENAI_API_KEY=test_api_key_12345
TEST_OPENAI_MODEL=gpt-4
TEST_OPENAI_MAX_TOKENS=1000

# Test Data Configuration
TEST_SUMMARY_LENGTH=200
TEST_MAX_ARTICLES=10
TEST_PROCESSING_TIMEOUT=30

# Mock External Services
MOCK_WEATHER_API=true
MOCK_NEWS_API=true
MOCK_EMAIL_SERVICES=true

# Integration Test Configuration (uncomment and fill for integration tests)
# These should be real credentials for integration testing
# INTEGRATION_IMAP_SERVER=imap.gmail.com
# INTEGRATION_COLLECTION_EMAIL=your.test.collector@gmail.com
# INTEGRATION_EMAIL_PASSWORD=your_actual_app_password
# INTEGRATION_OPENAI_API_KEY=your_actual_openai_api_key
# INTEGRATION_SENDER_EMAIL=your.test.sender@gmail.com
# INTEGRATION_SENDER_PASSWORD=your_sender_app_password